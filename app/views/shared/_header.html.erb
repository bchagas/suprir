<header>
  <div class="content">
    <h1 class="logo">
      <%= link_to (image_tag "logo.png", alt: t(:site_name)), root_path %>
    </h1>

    <% if current_user  %>
      <%= render "shared/user_menu" %>
    <% else %>
      <% unless ["sessions", "registrations", "passwords"].include?(controller_name) %>
        <%= link_to "Log in", new_user_session_path, class: "sign-in" %>
      <% end %>
    <% end %>
  </div>

</header>
