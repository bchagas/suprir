<section class="content user-password">
  <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.inputs "Senha <small>coloque seu email para recupera-la</small>" do %>
      <%= f.input :email, as: :email, label: false, placeholder: "Seu email", autofocus: true %>
    <% end %>

    <%= f.actions do %>
      <%= f.submit "Recuperar senha" %>
    <% end %>
  <% end %>

  <%= render "users/shared/links" %>
</section>
