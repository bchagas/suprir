<section class="content user-registration">
  <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.inputs "Conta <small>Seus dados</small>" do %>
      <%= f.input :email, label: false, placeholder: "Seu email", as: :email, autofocus: true %>
      <%= f.input :password, label: false, placeholder: "Sua senha #{@minimum_password_length ? "/ mínimo de #{@minimum_password_length} caracteres" : "" }", as: :password, autocomplete: "off", hint: "(Deixe em branco caso não queira alterar)" %>
      <%= f.input :password_confirmation, label: false, placeholder: "Confirme sua senha", as: :password, autocomplete: "off" %>
      <%= f.input :current_password, label: false, placeholder:"Sua senha atual", autocomplete: "off" %>
    <% end %>

    <%= f.actions do %>
      <li><%= f.submit "Alterar dados" %></li>
      <li><%= link_to "Voltar", :back %></li>
    <% end %>
  <% end %>

  <h3>Deletar minha conta</h3>
  <p><%= button_to "Deletar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</section>
