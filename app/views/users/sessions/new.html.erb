<section class="content user-session">
  <%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.inputs "Log in <small>Acesse sua conta</small>".html_safe do %>
      <%= f.input :email, autofocus: true, label: false, placeholder: "Seu email" %>
      <%= f.input :password, as: :password, label: false, placeholder: "Sua senha" %>
      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, as: :boolean %>
      <% end %>
    <% end %>

    <%= f.actions do %>
      <%= f.submit "Log in" %>
    <% end %>
  <% end %>

  <%= render "users/shared/links" %>
</section>
